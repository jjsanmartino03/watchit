@import '@/_variables.pcss';

.container{
    border: none;
    border-radius: .3rem;
    height: 40px;
    padding: .5rem;
    display: flex;
    align-items: center;

    &_filled{
        background: $background-gray;
    }

    & > input{
        border: none;
        background: none;
        outline: none;
        width: 100%;
        font-size: 1rem;
    }
}