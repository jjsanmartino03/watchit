.searchContainer{
    display: flex;
    flex-direction: column;
    gap:2rem;
}

.filters{
    display: flex;
    gap:1rem;
}

.moviesContainer{
    display: grid;
    gap:1rem;
    grid-template-columns: repeat(auto-fit,minmax(200px,1fr));
}

.movie{
    overflow: hidden;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    &__poster{
        width: 100%;
        max-width: 200px;
        height: auto;
        border-radius: 10px;
    }
}

